default: lg

_con:
    labgrid-client con $CONSOLE --logfile PRJ_ROOT/logs/`date +"%Y_%m_%d_%I_%M"`.log

_lock:
    #!/usr/bin/env bash
    set -x
    if [[ -n $LG_PLACE ]]; then
        labgrid-client who | grep $LG_PLACE
        if [ $? != 0 ]; then
            labgrid-client lock
        fi
    fi

_unlock:
    labgrid-client unlock

_pw +dir="on":
    labgrid-client pw {{dir}}

_pwcyc:
    labgrid-client pw cycle

lg: _lock _pw _con && (_pw "off") _unlock
